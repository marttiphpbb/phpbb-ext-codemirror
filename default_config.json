{
    "theme": "panda-syntax",
    "lineNumbers": true,
    "indentWithTabs": false,
    "extraKeys": {
      "F11": "marttiphpbbToggleFullScreen",
      "Esc": "marttiphpbbDisableFullScreen",
      "Ctrl-Alt-B": "marttiphpbbToggleBorder",
      "Ctrl-S": "marttiphpbbSubmit"
    },
    "matchBrackets": true,
    "autoCloseBrackets": true,
    "matchTags": true,
    "showTrailingSpace": true,
    "autoCloseTags": true,
    "newlineAndIndentContinueMarkdownList": true,
    "foldGutter": true,
    "styleActiveLine": true,
    "marttiphpbbBorderEnabled": true
}
