{
	"name": "marttiphpbb/codemirror",
	"type": "phpbb-extension",
	"description": "CodeMirror Extension for phpBB 3.2",
	"keywords": ["phpbb", "extension", "codemirror", "helper ext"],
	"homepage": "https://github.com/marttiphpbb/phpbb-ext-codemirror",
	"version": "0.1.0",
	"time": "2018-05-07",
	"license": "GPL-2.0",
	"authors": [{
			"name": "martti",
			"email": "info@martti.be",
			"homepage": "https://github.com/marttiphpbb/",
			"role": "Developer"
		}],
	"require": {
		"php": ">=7",
		"oomphinc/composer-installers-extender": "^1.1",
		"bower-asset/codemirror": "^5.37"
	},
	"require-dev": {
	},
	"extra": {
        "installer-types": ["bower-asset", "npm-asset"],
        "installer-paths": {
			"{$name}/": ["type:bower-asset", "type:npm-asset"]
		},
		"display-name": "CodeMirror (helper ext)",
		"soft-require": {
			"phpbb/phpbb": ">=3.2,<3.3"
		},
		"version-check": {
			"host": "marttiphpbb.github.io",
			"directory": "/version",
			"filename": "codemirror.json"
		}
	},
	"repositories":[
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }	
	]
}
